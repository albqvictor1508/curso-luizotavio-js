<%- include('includes/head') %>
  <body>
    <%- include('includes/nav') %>
    <div class="container">
        <div class="row">
            <div class="col-lg-2">

            </div>

            <div class="col-lg-8 my-4">
                <h1 class="text-center">Contatos</h1>

                <p class="text-muted text-center">Crie ou edite contatos abaixo.</p>

                <%- include('includes/messages') %>

                <form action="/register" method="post" id="formContato">

                    <input type="hidden" name="_csrf" value="<%- csrfToken %>">
                    <div class="mb-3">
                      <label class="form-label">Nome</label>
                      <input type="text" class="form-control" name="nome" aria-describedby="emailHelp" />
                    </div>

                    <div class="mb-3">
                      <label class="form-label">Sobrenome</label>
                      <input type="text" class="form-control" name="sobrenome">
                    </div>

                    <div class="mb-3">
                      <label class="form-label">Telefone</label>
                      <input type="tel" class="form-control" name="telefone">
                    </div>

                    <div class="mb-3">
                      <label class="form-label">E-mail</label>
                      <input type="email" class="form-control" name="email">
                    </div>

                    <button type="submit" class="btn btn-primary">Criar contato</button>
        </div>

            <div class="col-lg-2">

            </div>
        </div>
    </div>

<%- include('includes/footer') %>